<!DOCTYPE html>
<html>
<head>
  <title>Saasapp</title>
  <%= csrf_meta_tags %>
  
  <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  
</head>

<body>
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand" do %>
          <% if !user_signed_in? %> <!-- needs Function for showing different stages if clock counter is enabled or not -->
            <i class="fa fa-hourglass-o"></i>
          <% else %>
            <i class="fa fa-hourglass-2"></i>
          <% end %>
          DuuniKello
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <div class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= link_to "Kirjaudu Ulos", destroy_user_session_path, method: :delete, class: 'btn btn-danger navbar-btn' %>
          <% else %>
            <%= link_to "Kirjaudu Sis채채n", new_user_session_path , class: 'btn btn-success navbar-btn' %>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <!-- Place Holder for Admin Panel -->
            
            <li><%= link_to "Minun Kello", edit_user_registration_path %></li>
          <% end %>
          <li><%= link_to "Mik채 on DuuniKello?", about_path %></li>
          <li><%= link_to "Ota Yhteytt채", new_contact_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <div class="container flash-container">
    <% flash.each do |type, msg| %>
      <%= content_tag :div, msg, class: "alert text-center alert-#{type}" %>
    <% end %> 
  </div>
  <%= yield %>

</body>
</html>
